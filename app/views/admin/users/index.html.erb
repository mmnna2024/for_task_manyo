<h2 class="my-3">ユーザ一覧ページ</h2>

<table class="table">
  <thead class="table-light">
    <tr>
      <th><%= t('activerecord.attributes.user.name') %></th>
      <th><%= t('activerecord.attributes.user.email') %></th>
      <th><%= t('activerecord.attributes.user.admin') %>権限</th>
      <th><%= t('activerecord.attributes.user.task_amount') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.includes(:tasks).each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <% if user.admin %>
          <td>あり</td>
        <% else %>
          <td>なし</td>
        <% end %>
        <td><%= user.tasks.length %></td>
        <td class = "show-user"><%= link_to t('helpers.links.show'), admin_user_path(user) %></td>
        <td class = "edit-user"><%= link_to t('helpers.links.edit'), edit_admin_user_path(user) %></td>
        <td class = "destroy-user"><%= link_to t('helpers.links.destroy'), admin_user_path(user), method: :delete, data: { confirm: t('helpers.messages.destroy_confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>