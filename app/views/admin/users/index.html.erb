<h1>ユーザ一覧ページ</h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.user.name') %></th>
      <th><%= t('activerecord.attributes.user.email') %></th>
      <th><%= t('activerecord.attributes.user.admin') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin %></td>
        <td><%= link_to t('helpers.links.show'), admin_user_path(user), class: "show-user" %></td>
        <td><%= link_to t('helpers.links.edit'), edit_admin_user_path(user), class: "edit-user" %></td>
        <td><%= link_to t('helpers.links.destroy'), user, method: :delete, data: { confirm: t('helpers.messages.destroy_confirm') }, class: "destroy-user" %></td>
      </tr>
    <% end %>
  </tbody>
</table>