<!DOCTYPE html>
<html>
  <head>
    <title>CdpWebManyoTask</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all", 'data-turbolinks-track': "reload" %>
    <%= javascript_pack_tag "application", 'data-turbolinks-track': "reload" %>
    <%= stylesheet_pack_tag "application", media: "all", 'data-turbolinks-track': "reload" %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Task App</a>
      <div class="d-flex" id="navbarSupportedContent">
        <% if logged_in? && user_admin? %>
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
            <%= link_to "ユーザ一覧", admin_users_path, id: "users-index", class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to "ユーザを登録する", new_admin_user_path, id: "add-user", class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to t("helpers.links.tasks_index"), tasks_path, id: "tasks-index", class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to t("helpers.links.new_task"), new_task_path, id: "new-task", class: "nav-link" %>
            </li>
            <li>
            <%= link_to t("helpers.links.labels_index"), labels_path, id: "labels-index", class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to t("helpers.links.new_label"), new_label_path, id: "new-label", class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to t("helpers.links.account-setting"), user_path(current_user.id), id: "account-setting", class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to t("helpers.links.sign-out"), session_path(current_user.id), method: :delete, id: "sign-out", class: "nav-link" %>
            </li>
          </ul>
          <% elsif logged_in? %>
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
            <%= link_to t("helpers.links.tasks_index"), tasks_path, id: "tasks-index", class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to t("helpers.links.new_task"), new_task_path, id: "new-task", class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to t("helpers.links.labels_index"), labels_path, id: "labels-index", class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to t("helpers.links.new_label"), new_label_path, id: "new-label", class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to t("helpers.links.account-setting"), user_path(current_user.id), id: "account-setting", class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to t("helpers.links.sign-out"), session_path(current_user.id), method: :delete, id: "sign-out", class: "nav-link" %>
            </li>
          </ul>
          <% else %>
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
            <%= link_to t("helpers.links.sign-up"), new_user_path, id: "sign-up", class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to t("helpers.links.sign-in"), new_session_path, id: "sign-in", class: "nav-link" %>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
  </nav>
  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>
    <div class='container'>
    <%= yield %>
    </div>
  </body>
</html>
