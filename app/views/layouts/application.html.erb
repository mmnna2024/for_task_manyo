<!DOCTYPE html>
<html>
  <head>
    <title>CdpWebManyoTask</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all", 'data-turbolinks-track': "reload" %>
    <%= javascript_pack_tag "application", 'data-turbolinks-track': "reload" %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Task App</a>
      <div class="d-flex" id="navbarSupportedContent">
        <% if logged_in? && user_admin? %>
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
            <%= link_to "ユーザ一覧", admin_users_path, id: "users-index", class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to "ユーザを登録する", new_admin_user_path, id: "add-user", class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to t("helpers.links.tasks_index"), tasks_path, id: "tasks-index", class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to t("helpers.links.new_task"), new_task_path, id: "new-task", class: "nav-link" %>
            </li>
            <li>
            <%= link_to t("helpers.links.labels_index"), labels_path, id: "labels-index", class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to t("helpers.links.new_label"), new_label_path, id: "new-label", class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to t("helpers.links.account-setting"), user_path(current_user.id), id: "account-setting", class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to t("helpers.links.sign-out"), session_path(current_user.id), method: :delete, id: "sign-out", class: "nav-link" %>
            </li>
          </ul>
          <% elsif logged_in? %>
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
            <%= link_to t("helpers.links.tasks_index"), tasks_path, id: "tasks-index", class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to t("helpers.links.new_task"), new_task_path, id: "new-task", class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to t("helpers.links.labels_index"), labels_path, id: "labels-index", class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to t("helpers.links.new_label"), new_label_path, id: "new-label", class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to t("helpers.links.account-setting"), user_path(current_user.id), id: "account-setting", class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to t("helpers.links.sign-out"), session_path(current_user.id), method: :delete, id: "sign-out", class: "nav-link" %>
            </li>
          </ul>
          <% else %>
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
            <%= link_to t("helpers.links.sign-up"), new_user_path, id: "sign-up", class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to t("helpers.links.sign-in"), new_session_path, id: "sign-in", class: "nav-link" %>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
  </nav>
  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "alert alert-secondary") %>
  <% end %>
    <div class='container my-5'>
    <%= yield %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    </div>
  </body>
</html>
