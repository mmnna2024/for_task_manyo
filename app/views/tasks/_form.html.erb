<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :Content %>
    <%= form.text_area :content %>
  </div>

  <div class="actions">
    <%= form.submit id: button_id %>
  </div>
<% end %>
