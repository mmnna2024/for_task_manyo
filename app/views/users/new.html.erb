<h1><%= t('.title') %></h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>
  <div>
  <%= f.label :name %><br>
  <%= f.text_field :name %>
  </div>

  <div>
  <%= f.label :email %><br>
  <%= f.email_field :email %>
  </div>

  <div>
  <%= f.label :password %><br>
  <%= f.password_field :password %>
  </div>

  <div>
  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation %>
  </div>

  <div>
  <%= f.submit "登録する", id: "create-user" %>
  </div>
<% end %>